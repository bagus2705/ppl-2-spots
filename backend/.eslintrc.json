{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-undef": "off",
        "quotes": [
            "error",
            "single"
        ],
        "linebreak-style": "off",
        "no-underscore-dangle": "off",
        "no-unused-vars": "warn",
        "no-console": "warn"
    },
    "import/no-extraneous-dependencies": [
        "error",
        {
            "devDependencies": false,
            "optionalDependencies": false,
            "peerDependencies": false
        }
    ]
}